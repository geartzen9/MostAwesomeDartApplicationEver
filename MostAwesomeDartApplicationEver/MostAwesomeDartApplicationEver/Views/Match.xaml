<Page x:Class="MostAwesomeDartApplicationEver.Views.Match"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:MostAwesomeDartApplicationEver.ViewModels" 
      xmlns:local="clr-namespace:MostAwesomeDartApplicationEver.Views"
      mc:Ignorable="d"
      Title="Match" WindowHeight="900" WindowWidth="1600">

    <Page.DataContext>
        <vm:MatchViewModel />
    </Page.DataContext>
    <Grid VerticalAlignment="Center" Height="900" Width="1600" >

        <Button Name="Test" Content="Proceed" Command="{Binding NavigateToResultsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Margin="1360,789,0,0" VerticalAlignment="Top" Click="Test_Click" Height="54" Width="168"/>

        <TextBox  KeyDown="OnKeyDownHandler" Name="InputBox"  HorizontalAlignment="Left" Height="54" Margin="689,789,0,0" TextWrapping="Wrap" Text="{Binding SearchText, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="278" TextChanged="InputBox_TextChanged" PreviewTextInput="InputBox_PreviewTextInput">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" 
                    Command="{Binding EnterKeyCommand}"
                   />
            </TextBox.InputBindings>
        </TextBox>
        <Button Name="SubmitButton" Content="ENTER" Command="{Binding EnterKeyCommand}" Margin="972,789,0,0" VerticalAlignment="Top" Height="54" Width="75" Click="SubmitButton_Click"/>
        <DataGrid Name="DataGrid1" ItemsSource="{Binding Player1MatchScores}" AutoGenerateColumns="true" Margin="45,78,915,144">
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="Score" Binding="{Binding }" />
            </DataGrid.Columns>-->
        </DataGrid>
        <DataGrid Name="DataGrid2" ItemsSource="{Binding Player2MatchScores}" AutoGenerateColumns="true" Margin="914,78,72,144">
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="Score" Binding="{Binding }" />
            </DataGrid.Columns>-->
        </DataGrid>
        <Label Content="{Binding Player1Text}" HorizontalAlignment="Left" Margin="45,40,0,0" VerticalAlignment="Top" Height="33" Width="191"/>
        <Label Content="{Binding Player2Text}" HorizontalAlignment="Left" Margin="859,31,0,0" VerticalAlignment="Top" Height="33" Width="191"/>
        <Label Content="{Binding PlayingText}" HorizontalAlignment="Left" Margin="689,756,0,0" VerticalAlignment="Top" Height="33" Width="246"/>
        <Label Name="ScoreTypeLabel" Content="{Binding ScoreType}" HorizontalAlignment="Left" Margin="824,847,0,0" VerticalAlignment="Top" Height="32" Width="169"/>
        <Label  Content="Score type (s/d/t/b):" HorizontalAlignment="Left" Margin="689,847,0,0" VerticalAlignment="Top" Height="32" Width="123"/>

    </Grid>
</Page>
